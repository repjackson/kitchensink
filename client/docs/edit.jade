template(name='edit')
    with doc
        .ui.container
            .ui.segment
                each tags
                    .ui.basic.button.docTag
                        i.minus.icon
                        |#{this}
                .ui.left.icon.input
                    i.add.icon
                    input#addTag(type='text' autofocus='' placeholder='Add Tag')
                .ui.hidden.divider
                .ui.input
                    textarea#body
                        |#{body}
                .ui.hidden.divider
                label Cost (if document is for sale)
                .ui.left.icon.input
                    input#cost(type='number' min='0' value=cost)
                .ui.hidden.divider
                if tags.length
                    #saveDoc.ui.large.green.basic.button
                        i.check.icon
                        |Save
                #delete.ui.red.right.floated.basic.button
                    i.remove.icon
                    |Delete
        .ui.modal
            .header Confirm Delete
            .content
              .meta Confirm?
              .description #{body}
            .actions
              .ui.button.cancel Cancel
              .ui.red.button.approve Delete
