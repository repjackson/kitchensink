template(name='nav')
    .ui.top.attached.menu
        // a#homeLink.ui.item(href='/' class="{{isActivePath '/'}}")
        //     i.large.comment.outline.icon
        //     |Bubl
        if currentUser
            a#homeLink.ui.item(href='/' class="{{isActivePath '/'}}")
                i.file.text.outline.icon
                // i.large.comment.outline.icon
                |All
            a.item(href='/unvoted' class="{{isActivePath '/unvoted'}}")
                i.file.text.outline.icon
                // i.announcement.icon
                |Unvoted
            a.item(href='/mine' class="{{isActivePath '/mine'}}")
                i.file.text.outline.icon
                |Mine
            a.item(href='/people' class="{{isActivePath '/people'}}")
                i.users.icon
                |People
        // .ui.item
        //     .ui.left.transparent.icon.input
        //         i.lightning.icon
        //         input#quickAdd(type='text' autofocus='' placeholder='Say Anything')
        .item
            .ui.left.icon.input
                i.search.icon
                input#search(type='text', placeholder="Search")
        if currentUser
            a#addDoc.item
                i.plus.icon
                |Add
            // a.item(href='/marketplace' class="{{isActivePath '/marketplace'}}")
            //     i.shop.icon
            //     |Marketplace
            a.item(href='/profile' class="{{isActivePath '/profile'}}")
                i.user.icon
                |#{user.username}
        +atNavButton
    .ui.segment
        // .item
        //     .ui.left.icon.input
        //         i.search.icon
        //         input#search(type='text', placeholder="Search")
        if currentUser
            // a.item(href='/profile' class="{{isActivePath '/profile'}}")
            .ui.item
                i.user.icon
                |#{user.username}'s Descriptors:
                each user.tagCloud
                    .ui.small.compact.button.userTag(class=userTagClass) #{this.name}
                        small #{this.count}
        +atNavButton


template(name='tagresult')
