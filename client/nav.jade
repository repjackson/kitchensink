template(name='nav')
    .ui.inverted.menu
        .ui.header.item Facet
        a.item(href='/' class="{{isActivePath '/docs'}}")
            i.file.outline.icon
            |Documents
        a.item(href='/people' class="{{isActivePath '/people'}}")
            i.users.icon
            |People
        a.item(href='/exchange' class="{{isActivePath '/exchange'}}")
            i.money.icon
            |Exchange Points
        a.item(href='/importers' class="{{isActivePath '/importers'}}")
            i.down.arrow.icon
            |Importer

        .right.menu
            if currentUser
                .ui.simple.dropdown.item
                    i.plus.icon
                    span.text Add Doc
                    i.dropdown.icon
                    .menu
                        #newFromSelection.item
                            i.external.square.icon
                            |From Selection
                        #addDoc.item
                            i.file.outline.icon
                            |Blank
                        .header From Bookmarks
                        each user.bookmarks
                            .item.addFromBookmark
                                each this
                                    .ui.label #{this}
                .ui.simple.dropdown.item
                    i.bookmark.icon
                    span.text Bookmarks
                    i.dropdown.icon
                    .menu
                        each user.bookmarks
                            .item.selectBookmark
                                each this
                                    .ui.label #{this}
                a.item(href='/profile' class="{{isActivePath '/profile'}}")
                    i.user.icon
                    | #{user.username} [#{currentUser.points} pts]
            +atNavButton
