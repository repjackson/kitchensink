template(name='cloud')
    .ui.center.aligned.basic.segment
        h3.ui.header Browse People via Tags
        .ui.left.icon.small.input
            i.search.icon
            +inputAutocomplete settings=settings id="search" class="" autofocus='' autocomplete="off" placeholder='Search'
        if selected_tags
            #clear_tags.ui.large.primary.icon.compact.button
                i.remove.icon
            each selected_tags
                a.ui.large.primary.compact.button.unselect_tag
                    strong #{this}
        // .ui.hidden.fitted.divider
        // if Template.subscriptionsReady
        each all_tags
            .ui.compact.button.select_tag(class=cloud_tag_class) #{name}
                small #{this.count}
            // .ui.button.compact.selectTag #{this.name}
        h3.ui.header Browse Active Locations
        if selected_active_location_tags
            #clear_active_location_tags.ui.large.primary.icon.compact.button
                i.remove.icon
            each selected_active_location_tags
                a.ui.large.primary.compact.button.unselect_active_location_tag
                    strong #{this}
        // .ui.hidden.fitted.divider
        // if Template.subscriptionsReady
        each active_locations
            if name
                .ui.compact.button.active_location_tag(class=active_location_tag_class) #{name}
                // .ui.button.compact.selectTag #{this.name}
                    // small #{this.count}


