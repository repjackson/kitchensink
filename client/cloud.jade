template(name='cloud')
    .ui.center.aligned.bottom.attached.segment
        if selectedTags
            if currentUser
                #bookmarkSelection.ui.circular.active.icon.button
                    i.bookmark.icon
                #newFromSelection.ui.circular.active.icon.button
                    i.plus.icon
            #clearTags.ui.active.circular.big.icon.button
                i.remove.icon
        if selectedTags
            each selectedTags
                a.ui.active.big.circular.button.unselectTag
                    strong #{this}
        each globalTags
            .ui.compact.button.circular.selectTag(class=globalTagClass) #{this.name}
                small #{this.count}
