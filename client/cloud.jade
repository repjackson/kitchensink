template(name='cloud')
    .ui.center.aligned.bottom.attached.segment
        .ui.left.icon.input
            i.search.icon
            input#search(type='text' placeholder="Search/'clear'" autofocus='')
        if $.Session.get 'selected_user'
            .ui.button.active.selected_user_button
                i.user.icon
                |by #{selected_user}
        if $.Session.get 'upvoted_cloud'
            .ui.button.active.upvoted_cloud_button
                i.thumbs.up.icon
                |by #{upvoted_cloud}
        if $.Session.get 'downvoted_cloud'
            .ui.button.active.downvoted_cloud_button
                i.thumbs.down.icon
                |by #{downvoted_cloud}
        if selectedTags
            if currentUser
                #bookmarkSelection.ui.active.icon.button
                    i.bookmark.icon
                #newFromSelection.ui.active.icon.button
                    i.plus.icon
            #clearTags.ui.active.big.icon.button
                i.remove.icon
        if selectedTags
            each selectedTags
                a.ui.active.big.button.unselectTag
                    strong #{this}
        each globalTags
            .ui.compact.button.selectTag(class=globalTagClass) #{this.name}
                small #{this.count}

