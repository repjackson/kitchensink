template(name='person')
    .ui.fluid.card
        .content
            .header
                i.user.icon
                |#{username}
            .description
                each tagCloud
                    .ui.large.compact.button.userTag(class=userTagClass)
                        |#{this.name}
                        small #{this.count}
        unless isUser
            if currentUser
                .extra.content
                    if hasTagged
                        p My Tags
                        each myTags
                            .ui.basic.compact.button.removeMyTag
                                i.remove.icon
                                |#{this}
                        .ui.left.icon.input
                            i.tag.icon
                            input.addTag(type='text' placeholder='Add Tag')
                    else
                        .ui.basic.button.tagUser Describe Person
