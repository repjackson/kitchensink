template(name='event_cloud')
    .ui.center.aligned.segment
        .ui.header Browse Event Tags
        if selectedEventTags
            #cleartags.ui.secondary.big.compact.icon.button
                i.remove.icon
        if selectedEventTags
            each selectedEventTags
                a.ui.secondary.big.compact.button.unselecttag
                    strong #{this}
        each globaltags
            .ui.compact.basic.button.selecttag(class=globaltagClass) #{this.name}
                small #{this.count}
