template(name='profile')
    .ui.secondary.segment
        .ui.accordion
            .active.title
                i.dropdown.icon
                strong Profile
            .active.content
                .ui.label
                    +loginButtons
                .ui.form
                    img.ui.small.centered.circular.image(src=currentUser.picture)
                    .inline.field
                        label Picture
                        input#picture(type='text' value=currentUser.picture)
                    .inline.field
                        label Name
                        input#username(type='text' value=currentUser.username)
                    .inline.field 
                        label Contact Info (shown to friends)
                        .ui.left.icon.input
                            i.user.icon
                            input#contact(type='text' value=currentUser.contact)
                    .inline.field
                        label Tags
                        each currentUser.tags
                            .ui.compact.button.my_tag
                                i.remove.icon
                                |#{this}
                        .ui.left.icon.input
                            i.add.icon
                            // +inputAutocomplete settings=settings id="add_tag" class="" autocomplete="off" placeholder='Add Tag'
                            input#add_tag(type='text' autofocus='' autocomplete="off"  placeholder='Add Tag')
