                .ui.divider
                .ui.header Top Matches
                .ui.list
                    each user_matches
                        if length
                            .item
                                strong #{matched_user} #{length}
                                each tag_intersection
                                    .ui.small.compact.button.match_tag(class=match_tag_class) #{this}
                .ui.divider
                +friended_people
               
               
               
template(name='friended_people')
    .ui.header People Who Friended You
    .ui.list
        each friended_people
            .item
                img.ui.small.circular.image(src=picture)
                |#{username} #{contact}
                each person_intersection
                    .ui.small.compact.button.match_tag(class=match_tag_class) #{this}




