template(name='people')
    .ui.container
        each people
            +person


template(name='person')
    .ui.fluid.card
        .content
            .header
                i.user.icon
                |#{username}
            .description
                // h5.ui.header #{username}'s tags
                each tags
                    .ui.large.compact.button.tag(class=tagClass) #{this}
        unless isUser
            .extra.content
                div Your common tags with #{username} (#{matchedtags.length})
                each matchedtags
                    .ui.basic.label #{this}