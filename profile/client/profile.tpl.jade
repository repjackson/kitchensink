.ui.segment.container
    with currentUser
        .ui.form
            .field
                if profile.image_id
                    label Image
                    .ui.centered.image
                        img.ui.image(src="{{c.url profile.image_id width=400 height=400 gravity='face' crop='fill'}}")
                        a#remove_photo.ui.right.corner.link.label
                            i.remove.red.link.icon
                else
                    label My Image
                    input(type='file' name='upload_picture' accept='image/*')
            .field
                label My Name
                .ui.input
                    input#name(type='text' value=profile.name)
            .field
                label My Tags
                each tags
                    .ui.small.compact.button.person_tag
                        i.minus.icon
                        |#{this}
                .ui.left.icon.input
                    i.add.icon
                    input#add_tag(type='text' placeholder='Press enter after each tag' maxlength='30')
            .field
                .ui.center.aligned.basic.segment
                    #save_profile.ui.center.aligned.green.button 
                        |Save
